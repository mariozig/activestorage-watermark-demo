<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Image:</strong>
  <%= link_to @post.image do %>
    <%= image_tag @post.image.variant(combine_options: { gravity: 'center', draw: 'image Over 0,0 0,0 "' + Post::WATERMARK_PATH.to_s + '"' }) %>
  <% end %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
